{
  "expo": {
    "name": "Enigma",
    "slug": "enigma",
    "version": "1.0.1",
    "orientation": "portrait",
    "icon": "./src/assets/images/icon.png",
    "scheme": "enigma-messenger",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./src/assets/images/icon_colored.png",
        "monochromeImage": "./src/assets/images/icon_monochrome.png",
        "backgroundColor": "#000812"
      },
      "package": "com.enigmatium.enigma",
      "softwareKeyboardLayoutMode": "pan"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "backgroundColor": "#000812",
          "image": "./src/assets/images/logo.png",
          "imageWidth": 192
        }
      ],
      "expo-secure-store",
      [
        "expo-sqlite",
        {
          "enableFTS": true,
          "useSQLCipher": true,
          "android": {
            "enableFTS": false,
            "useSQLCipher": false
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "ea11e50d-dc0d-41b5-8363-c7eb3c8c50f0"
      }
    },
    "owner": "enigmatium"
  }
}
